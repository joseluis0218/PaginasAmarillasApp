<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.DetailActvity">

    <android.support.v7.widget.CardView
        android:id="@+id/android_card_view_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/fullname_text"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Nombres de la empresa"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:padding="2dp"/>

                    <TextView
                        android:id="@+id/address_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Direccion"
                        android:textSize="15sp"
                        android:padding="2dp"/>

                    <TextView
                        android:id="@+id/phone_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(01) 999-999-9"
                        android:textSize="15sp"
                        android:padding="2dp"/>

                    <TextView
                        android:id="@+id/email_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Correo"
                        android:textSize="16sp"
                        android:padding="4dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/picture_image"
                        android:layout_width="120dp"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_background"
                        tools:ignore="VectorDrawableCompat" />
                    <RatingBar
                        android:id="@+id/MyRating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:padding="3dp"
                        android:stepSize="1.5" />
                    <TextView
                        android:id="@+id/category_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Categoria"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/uno"
        android:layout_width="112dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/myborder"
        android:gravity="center"
        android:text="Información"
        android:textColor="@color/cardview_light_background"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Info" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/android_card_view_example1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/web"
                android:gravity="center|bottom"
                android:text="WEBSITE"
                android:textSize="8dp"
                android:onClick="BotonWeb"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/email"
                android:gravity="center|bottom"
                android:text="E-MAIL"
                android:textSize="8dp"
                android:onClick="BotonEmail"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/message_processing"
                android:gravity="center|bottom"
                android:text="SMS"
                android:textSize="8dp"
                android:onClick="BotonSMS"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_variant"
                android:gravity="center|bottom"
                android:text="COMPARTIR"
                android:textSize="7dp"
                android:onClick="BotonShare"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/phone"
                android:gravity="center|bottom"
                android:text="TELÉFONO"
                android:textSize="7dp"
                android:onClick="BotonCall"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
